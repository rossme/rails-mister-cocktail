
<div class="banner" style="background-color: black;">
  <div class="container" style="display: flex; justify-content: center;">
    <%= cl_image_tag("neon_ssh5kd.gif", :transformation=>[
      {:quality=>100, :height=>200, :crop=>"scale"},
      {:angle=>18}
    ]) %>
  </div>
</div>

<div class="container" style="padding-top: 20px;">
  <p>Here are your saved cocktails:</p>
  <div class="flex-item">
    <ul>
      <% @cocktails.each do |cocktail| %>
      <li><%= link_to cocktail.name, cocktail_path(cocktail)%></li>
        <% end %>
    </ul>
  </div>
  <div class="flex-item">
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-secondary btn-sm" %>
  </div>
</div>
