
<div class="banner" style="background-color: black;">
  <div class="container" style="display: flex; justify-content: center;">
    <%= cl_image_tag("neon_ssh5kd.gif", :transformation=>[
      {:quality=>100, :height=>200, :crop=>"scale"},
      {:angle=>18}
    ]) %>
  </div>
</div>
<div class="container" style="max-width: 400px; padding-top: 20px; ">
  <%= simple_form_for([@cocktail]) do |f| %>
      <%= f.input :name %>
      <%= f.submit "Add a cocktail", class: "btn btn-secondary"%>
  <% end %>
</div>
